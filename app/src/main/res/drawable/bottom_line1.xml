<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- 테두리 사각형그리고 -->
    <item
        android:left="15dp"
        android:right="15dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#CCCCCC" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

<!-- 하얀 사각형 아래에 여백 두고 그린다.   -->
    <item
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>